<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmodel"
            type="com.internship.firstweekapp.ui.calendar_dialog.CalendarDialogFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/search_view_round_white">

        <View
            android:id="@+id/sizeView"
            android:layout_width="336dp"
            android:layout_height="424dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mounthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="@{vmodel.month}"
            android:textColor="@color/gray_text"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="October" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/yearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="45dp"
            android:text="@{vmodel.year.toString()}"
            android:textColor="@color/gray_text"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/mounthTextView"
            app:layout_constraintStart_toEndOf="@id/mounthTextView"
            tools:text="2022" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:onClick="@{()->vmodel.prev()}"
            app:layout_constraintBottom_toBottomOf="@id/mounthTextView"
            app:layout_constraintEnd_toStartOf="@id/arrowForward"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrowForward"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:onClick="@{()->vmodel.next()}"
            app:layout_constraintBottom_toBottomOf="@id/mounthTextView"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:getAdapter="@{vmodel.arr}"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/mounthTextView" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="35dp"
            app:constraint_referenced_ids="cancelBtn, saveBtn"
            app:flow_horizontalGap="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(View) -> vmodel.onCancel(View)}"
            android:text="@string/cancel_text_btn"
            android:textAllCaps="false"
            android:textColor="@color/app_color"
            app:cornerRadius="8dp"
            app:strokeColor="@color/app_color"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(View) -> vmodel.onSave(View)}"
            android:text="@string/save_text_btn"
            android:textAllCaps="false"
            android:textColor="@color/app_color"
            app:cornerRadius="8dp"
            app:strokeColor="@color/app_color"
            app:strokeWidth="2dp"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>