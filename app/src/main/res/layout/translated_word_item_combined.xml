<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.internship.firstweekapp.ui.translator.RecyclerItemModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="flagFrom, original, to, translated, flagTo"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/flagFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.from}"
            tools:text="a" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/flagTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.to}"
            tools:text="a"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_text"
            tools:text="to"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.originalWord}"
            tools:text="d"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/translated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.translatedWord}"
            tools:text="a"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>