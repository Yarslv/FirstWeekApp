<resources>
    <!-- Base application theme. -->
    <style name="Theme.FirstWeekApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FABa" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="backgroundTint">@color/fab_color</item>
        <item name="maxImageSize">36dp</item>

        <item name="android:src">@drawable/ic_baseline_add_24</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="Toolbar" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>


</resources>