<resources>
    <!-- Base application theme. -->
    <style name="Theme.FirstWeekApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/beryl_green</item>
        <item name="android:textColor">@color/highland</item>
        <item name="strokeColor">@color/rainee</item>
    </style>

    <style name="MemeTextStyle">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/meme_text_size</item>
    </style>
</resources>