<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.internship.firstweekapp.ui.splash.SplashFragment"
        android:label="SplashFragment" />
    <fragment
        android:id="@+id/wifisFragment"
        android:name="com.internship.firstweekapp.ui.wifi_fragment.WiFisFragment"
        android:label="fragment_wifis"
        tools:layout="@layout/fragment_wifis">
        <action
            android:id="@+id/action_wifisFragment_to_dialogFragment"
            app:destination="@id/dialogFragment">
            <argument
                android:name="info"
                app:argType="string" />
        </action>
    </fragment>
    <dialog
        android:id="@+id/dialogFragment"
        android:name="com.internship.firstweekapp.ui.dialog.DialogFragment"
        android:label="fragment_dialog"
        tools:layout="@layout/fragment_dialog">
        <argument
            android:name="info"
            app:argType="string" />
    </dialog>

</navigation>