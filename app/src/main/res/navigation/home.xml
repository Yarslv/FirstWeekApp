<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    app:startDestination="@id/searchFragment">
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.internship.firstweekapp.ui.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_resultListFragment"
            app:destination="@id/resultListFragment">
            <argument
                android:name="query"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/resultListFragment"
        android:name="com.internship.firstweekapp.ui.result_list.ResultListFragment"
        android:label="ResultListFragment">

        <argument
            android:name="query"
            app:argType="string" />
        <action
            android:id="@+id/action_resultListFragment_to_recordDetailFragment"
            app:destination="@id/recordDetailFragment">

            <argument
                android:name="serializedRecordItem"
                app:argType="string" />

        </action>

    </fragment>
    <fragment
        android:id="@+id/recordDetailFragment"
        android:name="com.internship.firstweekapp.ui.record_detail.RecordDetailFragment"
        android:label="RecordDetailFragment" >

        <argument
            android:name="serializedRecordItem"
            app:argType="string" />

    </fragment>
</navigation>